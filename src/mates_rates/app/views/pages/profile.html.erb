<%= @user.first_name %>
<br>
<%= @user.last_name %>
<br>
<%= link_to 'Browse Tools', tools_path %>
<hr>
<% @user.tools.each do |tool| %>

  <%= tool.price %>
  <br>
  <%= tool.name %>
  <br>
  <%= tool.brand %>
  <br><%= tool.model %> <br>
  <%= tool.description %><br>
  <%= tool.availability %><br>
  <%= tool.delivery_options %><br> 
  <%= tool.delivery_fee %><br>
  <%= tool.min_delivery_fee %><br>
  <% if can? :edit, tool %>
    <%= link_to 'Edit', edit_tool_url(tool)%>
  <% end %>
<% end %>

