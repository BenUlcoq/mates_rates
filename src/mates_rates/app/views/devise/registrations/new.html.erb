
<%= javascript_include_tag "autocomplete" %>


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="field col s12">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>
<div class="row">
  <div class="field col s12">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <span class="helper-text" data-error="wrong" data-success="right">(<%= @minimum_password_length %> characters minimum)</span>
  </div>
</div>
<div class="row">
  <div class="field col s12">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

</div>
<div class="row">
  <div class="field col s6">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field col s6">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>
</div>
<div class="row">
  <div class="field col s12">
    <%= f.label :address %>
    <%= f.text_field :address, id: 'autocomplete', placeholder: 'Enter your address' %>
  </div>
</div>
<div class="row">


  <div class="field col s6">
  <%= f.label :role_ids, 'Role' %>
  <%= f.collection_select(:role_ids, Role.all.where.not(name: 'admin'), :id, :name) %>
  </div>    
</div>
  <div class="actions">
       <div class="row" class="center-align col s12">
    <button class="btn-large waves-effect waves-light white-text" type="submit" name="action">Sign Up
    </div>
  </div>
  

  
<% end %>
<h4> Already a member? </h4>
<%= render "devise/shared/links" %>


