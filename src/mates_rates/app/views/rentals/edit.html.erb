
<%= javascript_include_tag 'rentals' %>
<%= javascript_include_tag 'auto_dates' %>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", function() {
    createDatePicker(JSON.parse('<%= @unavailable_dates.to_json.html_safe %>'))
  })
</script>

<h1>Rentals#new</h1>
<p>Find me in app/views/rentals/new.html.erb</p>

<%= @rental.tool.user.first_name %>
<%= @rental.tool.user.last_name %>
<%= @rental.tool.name %>
<%= @rental.tool.brand %>
<%= @rental.tool.model %>
<%= @rental.start_date %>
<%= @rental.end_date %>
<%= @rental.price %>
<% if @rental.delivery_fee %>
  <%= @rental.delivery_fee %>
<% end %>

<% if can? :delete, @rental %>
  <%= link_to 'Destroy', @rental, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger is-rounded' %>
<% end %>



<% if @rental.finished %>
<%= form_with model: @rental, url: rental_path(@rental), local: true do |form| %>
  
  
  <div class="field">
      <%= form.label :returned %>
      <%= form.check_box :returned %>
  </div>
 
  

   <div class="row" class="center-align col s12">
    <button class="btn-large waves-effect waves-light white-text" type="submit" name="action">Submit
    </div>
 <% end %>
<% end %>
